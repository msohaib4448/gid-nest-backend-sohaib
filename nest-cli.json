{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "src/**/*.pdf",
        "outDir": "dist",
        "watchAssets": true
      },
      {
        "include": "../test",
        "outDir": "dist/public",
        "watchAssets": true
      }
    ]
  },
  "watchAssets": true
}
